generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model event {
  id            String     @id @unique @default(cuid())
  start_date    DateTime
  end_date      DateTime
  title         String     @unique
  description   String?
  bill          Float      // Changed from Bytes
  event_typeId String
  event_type    event_type @relation(fields: [event_typeId], references: [id])
}

model api_user {
  id   String  @id @unique @default(cuid())
  name String  @unique
}

model event_type {
  id    String  @id @unique @default(cuid())
  type  String  @unique
  event event[]
}

model item {
  id             String      @id @unique @default(cuid())
  title_fr       String      @unique
  title_en       String      @default("Unknown")
  description_fr String      @default("Unknown")
  description_en String      @default("Unknown")
  price          Float
  image          String
  item_size      item_size[]
}

model size {
  id        String      @id @unique @default(cuid())
  size      String      @unique
  item_size item_size[]
}

model item_size {
  id          String     @id @unique @default(cuid())
  stock       Int
  preorder    Int        @default(0)
  itemId      String
  sizeId      String
  item        item       @relation(fields: [itemId], references: [id])
  size        size       @relation(fields: [sizeId], references: [id])
  order_item_size order_item_size[]
}

model user {
  id         String  @id @unique @default(cuid())
  first_name String
  last_name  String
  email      String
  phone      String
  orders     order[]
}

model order {
  id              String            @id @unique @default(cuid())
  status          String
  order_date      DateTime
  userId          String
  total           Float
  user            user              @relation(fields: [userId], references: [id])
  order_item_size order_item_size[]
}

model order_item_size {
  id                 String     @id @unique @default(cuid())
  orderId            String
  item_sizeId        String
  stock_quantity     Int @default(0)
  preorder_quantity  Int @default(0)
  total_quantity     Int @default(0) // Added default value
  item_size          item_size @relation(fields: [item_sizeId], references: [id])
  order              order     @relation(fields: [orderId], references: [id])
}
